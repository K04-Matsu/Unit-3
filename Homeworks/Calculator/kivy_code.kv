Screen:
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        md_bg_color: 0,0,0,1
        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1.0
            MDLabel:
                id: num
                text: "0"
                halign: "right"
                font_size: "64pt"
                size_hint: 1, 0.8
                text_color: 1, 1, 1, 1
                color: 1,1,1,1

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1.0

            MDFillRoundFlatButton:
                id: button_clear
                size_hint: 1.0, 1
                text: "AC"
                font_size: "32pt"
                text_color: 0, 0, 0, 1
                color: 0,0,0,1
                md_bg_color: 165/255, 165/255, 165/255, 1
                on_press:
                    app.clear()
            MDFillRoundFlatButton:
                id: button_neg
                size_hint: 1.0, 1
                text: "+/-"
                font_size: "32pt"
                text_color: 0, 0, 0, 1
                color: 0,0,0,1
                md_bg_color: 165/255, 165/255, 165/255, 1
                on_press:
                    app.neg()
            MDFillRoundFlatButton:
                id: percent_button
                size_hint: 1.0, 1
